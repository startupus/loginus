# Production Environment Variables
NODE_ENV=production
PORT=3001

# Database
DB_HOST=loginus-db
DB_PORT=5432
DB_USERNAME=loginus
DB_PASSWORD=your_secure_password_here
DB_DATABASE=loginus_prod

# JWT Secrets (CHANGE THESE!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars-long
JWT_EXPIRATION=2h
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars-long-very-secure
JWT_REFRESH_EXPIRATION=7d

# Frontend URL
FRONTEND_URL=https://loginus.startapus.com

# Email Configuration
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=465
SMTP_USER=your-email@yandex.ru
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@loginus.startapus.com

# Swagger
SWAGGER_ENABLED=false

# Logging
LOG_LEVEL=info